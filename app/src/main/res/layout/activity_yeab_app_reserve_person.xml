<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    tools:context=".yeab_app_reserve_person">

    <TextView
        android:id="@+id/t_resChoosePerson"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:text="예약 인원 선택"
        android:textColor="@color/black"
        android:textSize="35dp" />

    <Button
        android:id="@+id/btn_1person"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:text="○ 1명"
        android:backgroundTint="@color/white"
        android:textColor="@color/black"
        android:textSize="26dp"/>

    <Button
        android:id="@+id/btn_2person"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="○ 2명"
        android:backgroundTint="@color/white"
        android:textColor="@color/black"
        android:textSize="26dp"/>

    <Button
        android:id="@+id/btn_3person"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="○ 3명"
        android:backgroundTint="@color/white"
        android:textColor="@color/black"
        android:textSize="26dp"/>

    <TextView
        android:id="@+id/t_resChoosePersonWarning"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:text="※ 예약 인원은 최대 3명까지 선택 가능합니다."
        android:textSize="19dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/t_resCodeWrite"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_marginTop="30dp"
            android:text="예약 코드: "
            android:textSize="20dp" />

        <TextView
            android:id="@+id/t_resCodeTimeA"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="30dp"
            android:text=""
            android:textSize="20dp" />

        <TextView
            android:id="@+id/t_resCodeTimeB"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="-30dp"
            android:layout_marginTop="30dp"
            android:text=""
            android:textSize="20dp" />

        <TextView
            android:id="@+id/t_resCodeTimeC"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="-30dp"
            android:layout_marginTop="30dp"
            android:text=""
            android:textSize="20dp" />

        <TextView
            android:id="@+id/t_resCodeTimeD"
            android:layout_width="40dp"
            android:layout_height="30dp"
            android:layout_marginLeft="-40dp"
            android:layout_marginTop="30dp"
            android:text=""
            android:textSize="20dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="50dp">

        <ImageButton
            android:id="@+id/Ibtn_before"
            android:layout_width="55dp"
            android:layout_height="51dp"
            android:layout_marginLeft="30dp"
            app:srcCompat="@android:drawable/ic_media_previous"/>

    </LinearLayout>

</LinearLayout>