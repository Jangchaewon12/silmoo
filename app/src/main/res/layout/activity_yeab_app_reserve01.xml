<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".yeab_app_reserve_01">

    <!--처음부터 끝까지 '민예인' 작성-->

    <!--큰 텍스트 출력-->
    <TextView
        android:id="@+id/t_personal1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="10dp"
        android:textColorHint="@color/black"
        android:textSize="27dp"
        android:hint="- 개인정보 수집항목, 이용목적"/>

    <!--세부내용-->
    <TextView
        android:id="@+id/t_personal1_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:layout_marginLeft="10dp"
        android:textColorHint="@color/black"
        android:hint="초기에 예약할 때 입력한 전화번호는 부정 이용 방지로만 사용되며,
yeab에서는 이 데이터를 개인정보로 취급합니다. 최대 2달동안 개인정보가 보관되며 이는
나중에 자동으로 삭제됩니다."/>

    <!--큰 텍스트 출력-->
    <TextView
        android:id="@+id/t_personal2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="10dp"
        android:textColorHint="@color/black"
        android:textSize="27dp"
        android:hint="- 개인정보의 보유기간"/>

    <!--세부내용-->
    <TextView
        android:id="@+id/t_personal2_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:layout_marginLeft="10dp"
        android:textColorHint="@color/black"
        android:hint="yeab에서는 필요한 경우 최대 두달동안 보관하는 데이터도
있습니다. 데이터 저장 만료 기간이 지나면 yeab은 삭제 정책에 따라 데이터를 안전하고
확실하게 삭제합니다."/>

    <!--약관 동의 체크박스-->
    <CheckBox
        android:id="@+id/cb_personal1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="4dp"
        android:text="위의 약관을 모두 동의함"/>

    <CheckBox
        android:id="@+id/cb_personal2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:text="yeab 어플 서비스 약관에 동의함"/>

    <CheckBox
        android:id="@+id/cb_personal3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:text="위와 같은 주요 사항을 비롯하여 yeab 어플 개인 정보처리방침에
설명되어 있는 개인정보 수집항목, 이용목적, 보유기간에 동의함"/>

    <!--중첩 리니어 레이아웃을 사용해 한 줄에 표시될 수 있게끔 구현-->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="50dp">

        <!--이전 버튼-->
        <ImageButton
            android:id="@+id/Ibtn_before"
            android:layout_width="55dp"
            android:layout_height="51dp"
            android:layout_marginLeft="30dp"
            app:srcCompat="@android:drawable/ic_media_previous"/>

        <!--다음 버튼-->
        <ImageButton
            android:id="@+id/Ibtn_next"
            android:layout_width="55dp"
            android:layout_height="51dp"
            android:layout_marginLeft="240dp"
            app:srcCompat="@android:drawable/ic_media_play"/>

    </LinearLayout>

</LinearLayout>